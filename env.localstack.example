# LocalStack Environment Variables
# Copy this to .env.localstack and source it before running local tests:
#   cp env.localstack.example .env.localstack
#   source .env.localstack

# AWS LocalStack Configuration
export AWS_ENDPOINT_URL=http://localhost:4566
export AWS_ACCESS_KEY_ID=test
export AWS_SECRET_ACCESS_KEY=test
export AWS_DEFAULT_REGION=us-east-1

# LocalStack flags
export USE_LOCALSTACK=true

# Skip AWS validations (speeds up Terraform with LocalStack)
export AWS_SKIP_CREDENTIALS_VALIDATION=true
export AWS_SKIP_REQUESTING_ACCOUNT_ID=true
export AWS_SKIP_METADATA_API_CHECK=true

# Force path-style S3 URLs for LocalStack (not virtual-hosted-style)
export AWS_S3_USE_PATH_STYLE=true

# Debug (optional - uncomment and set to DEBUG for verbose output)
# export TF_LOG=DEBUG
